<Window x:Class="JudgePlacement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:JudgePlacement.View"
        xmlns:local="clr-namespace:JudgePlacement"
        mc:Ignorable="d"
        Title="JudgePlacementAlgorithm" Height="562.5" Width="1000">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.75*"/>
            <ColumnDefinition Width="0.25*" MaxWidth="250"/>
        </Grid.ColumnDefinitions>

        <view:TournamentControlView DataContext="{Binding TournamentControl}" Grid.Column="0"/>
        <view:ApplicationControlView DataContext="{Binding ApplicationControl}" Grid.Column="1"/>
    </Grid>
</Window>
